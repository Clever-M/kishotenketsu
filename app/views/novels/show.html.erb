<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @novel %>">
  <h1><strong><%= @novel.title %></strong></h1>

  <p>
    <strong>Description:</strong>
    <%= @novel.description %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @novel.genre %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @novel.author.nickname %>
  </p>

  <h2>Chapters</h2>
  <ul>
    <% @volumes.each do |volume| %>
      <li><%= link_to "Volume #{volume.number}: #{volume.title}", novel_volume_path(volume) %></li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to "Add New Volume", new_novel_volume_path(@novel) %>
  <%= link_to "Edit this novel", edit_novel_path(@novel) %> |
  <%= link_to "Back to novels", novels_path %>

  <%= button_to "Destroy this novel", @novel, method: :delete %>
</div>
